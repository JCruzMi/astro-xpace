---
import HeaderButton from "./HeaderButton.astro";
const currentPath = Astro.url.pathname;

---

<header transition:persist class="py-8 px-4 mx-auto max-w-5xl lg-py- 16 lg:px-6">
  <div class="mx-auto text-center mb-8 lg:mb-16">
    <h2 class="mb-4 text-5xl tracking-tighter font-extrabold text-transparent bg-clip-text bg-gradient-to-r from-gray-700 to-blue-500 w-8 h-8 -mt-1 inline mx-auto">
      xPace lanzamientos
    </h2>    
  </div>  
  <nav
    class="text-white flex flex-col items-start justify-start w-full text-center "
    
  >
    <HeaderButton href="/">
        {
          currentPath === '/' ? (
          <svg slot="before" width="40" height="40" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
            <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
            <path d="M19.072 21h-14.144a1.928 1.928 0 0 1 -1.928 -1.928v-6.857c0 -.512 .203 -1 .566 -1.365l7.07 -7.063a1.928 1.928 0 0 1 2.727 0l7.071 7.063c.363 .362 .566 .853 .566 1.365v6.857a1.928 1.928 0 0 1 -1.928 1.928z" />
            <path d="M7 13v4h10v-4l-5 -5" />
            <path d="M14.8 5.2l-11.8 11.8" />
            <path d="M7 17v4" />
            <path d="M17 17v4" />
          </svg>
          ) : (
          <svg width="40" height="40" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
            <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
            <path d="M5 12l14 0" />
            <path d="M5 12l6 6" />
            <path d="M5 12l6 -6" />
          </svg>
          )
        }
        {
            currentPath === "/" ? (
                <span class="text-xl font-bold">Inicio</span>
            ) : (
                <span class="text-xl">Regresar</span>
            )
        }
    </HeaderButton>
        
  </nav>
</header>
